# Multi-Org Integration Platform - Environment Variables
# Copy this file to .env and update the values

# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB Configuration (Free MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/multiorg-integration?retryWrites=true&w=majority

# Frontend URL (for CORS)
FRONTEND_URL=https://multi-org-integration.vercel.app

# JWT Configuration (optional for future auth)
JWT_SECRET=your-super-secret-jwt-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Level
LOG_LEVEL=info

# External Service URLs (optional)
SALESFORCE_LOGIN_URL=https://login.salesforce.com
EINSTEIN_API_URL=https://api.einstein.ai

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-here

# Email Configuration (optional for notifications)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_SERVICE=gmail

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME=true
ENABLE_ANALYTICS=true

# Demo Mode Settings
DEMO_MODE=true
DEMO_DATA_SIZE=25